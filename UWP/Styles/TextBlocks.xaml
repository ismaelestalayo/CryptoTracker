<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="SettingsSectionDescription" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="FontWeight" Value="ExtraLight"/>
        <Setter Property="Foreground" Value="{ThemeResource ApplicationPointerOverForegroundThemeBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="MaxWidth" Value="350"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="SettingsSectionTitleText" BasedOn="{StaticResource SubtitleTextBlockStyle}">
        <Setter Property="TextLineBounds" Value="Tight"/>
        <Setter Property="Margin" Value="8 0 0 2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
